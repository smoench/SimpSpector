<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="simpspector.app.webhook.event_factory" class="DavidBadura\GitWebhooks\EventFactory"
                factory-class="DavidBadura\GitWebhooks\EventFactory" factory-method="createDefault"/>

        <service id="simpspector.app.webhook.handler" class="AppBundle\WebhookHandler">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="simpspector.app.gitlab.request_handler" class="AppBundle\GitLab\RequestHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="simpspector.app.repository.merge_request"/>
            <argument type="service" id="simpspector.app.repository.project"/>
            <argument type="service" id="gitlab_api"/>
            <argument type="service" id="simpspector.app.gitlab.notifier"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="simpspector.app.gitlab.notifier" class="AppBundle\GitLab\Notifier">
            <argument type="service" id="gitlab_api"/>
            <argument type="service" id="simpspector.app.badge.markdown_generator"/>
            <argument type="service" id="logger"/>
        </service>

    </services>
</container>
