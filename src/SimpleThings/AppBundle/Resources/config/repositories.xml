<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="simpspector.app.repository.commit"
                 class="SimpleThings\AppBundle\Repository\CommitRepository"
                 factory-service="doctrine"
                 factory-method="getRepository">
            <argument>SimpleThings\AppBundle\Entity\Commit</argument>
        </service>

        <service id="simpspector.app.repository.merge_request"
                 class="SimpleThings\AppBundle\Repository\MergeRequestRepository"
                 factory-service="doctrine"
                 factory-method="getRepository">
            <argument>SimpleThings\AppBundle\Entity\MergeRequest</argument>
        </service>

        <service id="simpspector.app.repository.project"
                 class="SimpleThings\AppBundle\Repository\ProjectRepository"
                 factory-service="doctrine"
                 factory-method="getRepository">
            <argument>SimpleThings\AppBundle\Entity\Project</argument>
        </service>

    </services>
</container>
