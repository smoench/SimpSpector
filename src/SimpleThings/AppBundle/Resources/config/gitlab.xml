<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="simple_things_app.gitlab.request_handler" class="SimpSpector\Provider\RequestHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="simpspector.app.repository.merge_request"/>
            <argument type="service" id="simpspector.app.repository.project"/>
            <argument type="service" id="simpspector.provider.gitlab_adapter"/>
            <argument type="service" id="simple_things_app.gitlab.notifier"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="simple_things_app.gitlab.notifier" class="SimpSpector\Provider\Notifier">
            <argument type="service" id="simpspector.provider.gitlab_adapter"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="simpspector.provider.gitlab_adapter" class="SimpSpector\Provider\GitlabProviderAdapter">
            <argument type="service" id="gitlab_api"/>
            <argument type="service" id="simple_things_app.badge_generator"/>
        </service>

    </services>
</container>
