<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="simple_things_app.gitlab.commit_factory" class="SimpleThings\AppBundle\GitLab\CommitFactory">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="gitlab_api"/>
        </service>

        <service id="simple_things_app.gitlab.request_handler" class="SimpleThings\AppBundle\GitLab\RequestHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="gitlab_api" />
            <argument type="service" id="simple_things_app.gitlab.notifier"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="simple_things_app.gitlab.notifier" class="SimpleThings\AppBundle\GitLab\Notifier">
            <argument type="service" id="gitlab_api"/>
            <argument type="service" id="simple_things_app.badge_generator"/>
            <argument type="service" id="logger"/>
        </service>

    </services>
</container>
