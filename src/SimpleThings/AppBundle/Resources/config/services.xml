<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="git_repository_tmp_dir">%kernel.root_dir%/../var/checkouts</parameter>
    </parameters>

    <services>
        <service id="simple_things_app.git_checkout" class="SimpleThings\AppBundle\GitCheckout">
            <argument type="service" id="gitlab_api"/>
            <argument type="service" id="simple_things_app.git_wrapper"/>
            <argument type="string">%git_repository_tmp_dir%</argument>
        </service>

        <service id="simple_things_app.button_generator" class="SimpleThings\AppBundle\ButtonGenerator">
        </service>

        <service id="simple_things_app.commit_handler" class="SimpleThings\AppBundle\CommitHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="simple_things_app.git_checkout"/>
            <argument type="service" id="simple_things_app.gadget_executor"/>
        </service>

        <service id="simple_things_app.git_wrapper" class="GitWrapper\GitWrapper">
            <call method="addLoggerListener">
                <argument type="service">
                    <service class="GitWrapper\Event\GitLoggerListener">
                        <argument type="service" id="logger" />
                    </service>
                </argument>
            </call>
        </service>

        <service id="simple_things_app.gadget_executor" class="SimpleThings\AppBundle\GadgetExecutor">
            <argument type="service" id="simple_things_app.gadget.repository"/>
        </service>

        <service id="simple_things_app.gadget.repository" class="SimpleThings\AppBundle\Gadget\Repository"/>

        <service id="simple_things_app.gadget.composer" class="SimpleThings\AppBundle\Gadget\Composer">
            <tag name="simpspector.gadget"/>
        </service>
    </services>
</container>
