<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="git_repository_tmp_dir">%kernel.root_dir%/../var/checkouts</parameter>
        <parameter key="phpmd_bin">%kernel.root_dir%/../bin/phpmd</parameter>
        <parameter key="phpcs_bin">%kernel.root_dir%/../bin/phpcs</parameter>
        <parameter key="security_checker_bin">%kernel.root_dir%/../bin/security-checker</parameter>
    </parameters>

    <services>
        <service id="simple_things_app.git_checkout" class="SimpleThings\AppBundle\GitCheckout">
            <argument type="string">%git_repository_tmp_dir%</argument>
        </service>

        <service id="simple_things_app.badge_generator" class="SimpleThings\AppBundle\Badge\Generator">
            <argument type="service" id="router" />
        </service>

        <service id="simple_things_app.logger.file_locator" class="SimpleThings\AppBundle\Logger\FileLocator">
            <argument type="string">%kernel.root_dir%/../var/job_logs</argument>
        </service>

        <service id="simple_things_app.logger.factory" class="SimpleThings\AppBundle\Logger\LoggerFactory">
            <argument type="service" id="simple_things_app.logger.file_locator"/>
        </service>

        <service id="simple_things_app.logger.reader" class="SimpleThings\AppBundle\Logger\Reader">
            <argument type="service" id="simple_things_app.logger.file_locator"/>
        </service>

        <service id="simple_things_app.commit_handler" class="SimpleThings\AppBundle\CommitHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="simple_things_app.git_checkout"/>
            <argument type="service" id="simple_things_app.config_loader"/>
            <argument type="service" id="simple_things_app.gadget_executor"/>
            <argument type="service" id="simple_things_app.logger.factory"/>
        </service>

        <service id="simple_things_app.config_loader" class="SimpleThings\AppBundle\ConfigLoader" />

        <service id="simple_things_app.gadget_executor" class="SimpleThings\AppBundle\GadgetExecutor">
            <argument type="service" id="simple_things_app.gadget.repository"/>
        </service>

        <service id="simple_things_app.gadget.repository" class="SimpleThings\AppBundle\Gadget\Repository"/>

        <service id="simple_things_app.badge.score_calculator" class="SimpleThings\AppBundle\Badge\ScoreCalculator"/>

        <!-- GADGETS -->
        <service id="simple_things_app.gadget.phpcs" class="SimpleThings\AppBundle\Gadget\PhpcsGadget">
            <argument type="string">%phpcs_bin%</argument>
            <tag name="simpspector.gadget"/>
        </service>

        <service id="simple_things_app.gadget.phpmd" class="SimpleThings\AppBundle\Gadget\PhpmdGadget">
            <argument type="string">%phpmd_bin%</argument>
            <tag name="simpspector.gadget"/>
        </service>

        <service id="simple_things_app.gadget.comment_blacklist" class="SimpleThings\AppBundle\Gadget\CommentBlacklistGadget">
            <tag name="simpspector.gadget"/>
        </service>

        <service id="simple_things_app.gadget.function_blacklist" class="SimpleThings\AppBundle\Gadget\FunctionBlacklistGadget">
            <tag name="simpspector.gadget"/>
        </service>

        <service id="simple_things_app.gadget.security_checker" class="SimpleThings\AppBundle\Gadget\SecurityCheckerGadget">
            <argument type="string">%security_checker_bin%</argument>
            <tag name="simpspector.gadget"/>
        </service>

        <!-- TWIG -->
        <service id="simple_things_app.twig.extension.util" class="SimpleThings\AppBundle\Twig\UtilExtension">
            <argument type="service" id="simple_things_app.badge.score_calculator"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
