<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="git_repository_tmp_dir">%kernel.root_dir%/../var/checkouts</parameter>
        <parameter key="job_logs">%kernel.root_dir%/../var/logs/job</parameter>
    </parameters>

    <services>
        <service id="simple_things_app.worker.workspace_manager" class="SimpleThings\AppBundle\Worker\WorkspaceManager">
            <argument type="string">%git_repository_tmp_dir%</argument>
        </service>

        <service id="simple_things_app.badge_generator" class="SimpleThings\AppBundle\Badge\Generator">
            <argument type="service" id="router"/>
        </service>

        <service id="simple_things_app.logger.file_locator" class="SimpleThings\AppBundle\Logger\FileLocator">
            <argument type="string">%job_logs%</argument>
        </service>

        <service id="simple_things_app.logger.factory" class="SimpleThings\AppBundle\Logger\LoggerFactory">
            <argument type="service" id="simple_things_app.logger.file_locator"/>
        </service>

        <service id="simple_things_app.logger.reader" class="SimpleThings\AppBundle\Logger\Reader">
            <argument type="service" id="simple_things_app.logger.file_locator"/>
        </service>

        <service id="simple_things_app.worker.commit_handler" class="SimpleThings\AppBundle\Worker\CommitHandler">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="simple_things_app.worker.workspace_manager"/>
            <argument type="service" id="simpspector.analyser"/>
            <argument type="service" id="simple_things_app.logger.factory"/>
            <argument type="service" id="simpspector.analyser.event_dispatcher"/>
        </service>

        <service id="simple_things_app.badge.score_calculator" class="SimpleThings\AppBundle\Badge\ScoreCalculator"/>

        <service id="simpspector.app.worker.garbage_collector" class="SimpleThings\AppBundle\Worker\GarbageCollector">
            <argument type="string">%git_repository_tmp_dir%</argument>
        </service>

        <!-- TWIG -->
        <service id="simple_things_app.twig.extension.util" class="SimpleThings\AppBundle\Twig\UtilExtension">
            <argument type="service" id="simple_things_app.badge.score_calculator"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Markdown -->
        <service id="simpspector.ciconia.extension.fenced_code_block"
                 class="SimpleThings\AppBundle\Ciconia\Extension\FencedCodeBlockExtension" public="false">
            <tag name="ciconia.extension"/>
        </service>

        <!-- Events -->
        <service id="simpspector.event.subscriber.logger"
                 class="SimpleThings\AppBundle\Event\Subscriber\LoggerSubscriber">
            <tag name="simpspector.analyser.subscriber"/>
        </service>

    </services>
</container>
